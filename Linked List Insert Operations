#include <stdio.h>
#include <stdlib.h>
int x;
struct node
{
    int info;
    struct node *link;

}*start=NULL;

struct node *temp1,*temp2;
struct node *createNode()
{
    struct node *newnode;
    newnode=(struct node*)malloc(sizeof(struct node));
    newnode->link=NULL;
    return newnode;

}
void insertNodeAtEnding()
{
    temp1=createNode();
    printf("Enter the value\n");
    scanf("%d",&temp1->info);
    if(start==NULL)
    {
        start=temp1;

    }
    else
    {
        temp2=start;
        while(temp2->link!=NULL)
        {
            temp2=temp2->link;
        }
        temp2->link=temp1;
    }
}
void insertAtBeginning()
{
    struct node *temp3;
    temp1=createNode();
    printf("Enter the data\n");
    scanf("%d",&temp1->info);
    temp3=start;
    start=temp1;
    temp1->link=temp3;
}
void insertAtMiddle()
{

    int p;
    struct node *temp3;
    temp1=createNode();
    printf("Enter the data\n");
    scanf("%d",&temp1->info);
    printf("Enter the position\n");
    scanf("%d",&p);
    temp2=start;
    for(int i=1;i<p-1;i++)
    {
        temp2=temp2->link;

    }
    temp3=temp2->link;
    temp2->link=temp1;
    temp1->link=temp3;
}
void traverse()
{
    temp2=start;
    while(temp2!=NULL)
    {
        printf("%d ",temp2->info);
        temp2=temp2->link;
    }
    printf("\n");
}
void main()
{
    do
    {
        printf("Enter your choice\n");
        scanf("%d",&x);
        switch(x)
        {
            case 1:{
                insertNodeAtEnding();
                break;
            }
            case 2:
                {
                    insertAtBeginning();
                    break;
                }
            case 3:
                {
                    insertAtMiddle();
                    break;
                }
            case 4:
                {
                    traverse();
                    break;
                }
            case 5:
                {
                    printf("EXIT STATUS");
                    break;
                }
            default:
                {
                    printf("Please Enter a Valid Choice");
                }
        }
    }while(x!=5);
}

