#include <stdio.h>

int q[100],n,front,rear,x,c,val;
void push();
void pop();
void display();
int main() {
    front=rear=-1;;
    printf("\nEnter size of queue\n");
	scanf("%d",&n);
    do{
        printf("\nEnter a choice\n");
        scanf("%d",&c);
        switch(c)
        {
            case 1:
            {
                push();
                break;
            }
            case 2:
            {
                pop();
                break;
            }
            case 3:
            {
                display();
                break;
            }
            case 4:
            {
                printf("\nEXIT POINT\n");
                break;
            }
            default:
            {
             printf("\nPlease Enter a Valid Choice\n");
            }
        }
    }while(c!=4);
    return 0;
    }
void push()
{

    if((rear+1)%n == front)
    {
        printf("\nOVERFLOW");
        return;
    }
    else if(front == -1 && rear == -1)
    {
        front = 0;
        rear = 0;
    }
    else if(rear == n -1 && front != 0)
    {
        rear = 0;
    }
    else
    {
        rear = (rear+1)%n;
    }
    printf("\nEnter a value to be inserted\n");
    scanf("%d",&x);
    q[rear] = x;
}
void pop()
{
    if(front == -1 & rear == -1)
    {
        printf("\nUNDERFLOW\n");
        return;
    }
    else if(front == rear)
    {
        front = -1;
        rear = -1;
    }
    else if(front == n -1)
        {
            front = 0;
        }
    else
    {front = front + 1;
        val=q[front-1];
        printf("Value that is being deleted=%d",val);
    }
}
void display()
{
    if(front==-1)
    {
        printf("The queue is empty");
    }
    else
    {
        if(front<=rear)
        {
            for(int i=front;i<=rear;i++)
            {
                printf("%d",q[i]);
            }
        }
        else
        {

            for(int i=front;i<=n-1;i++)
            {
                printf("%d",q[i]);
            }

        for(int i=0;i<=rear;i++)
        {
            printf("%d",q[i]);
        }
        }
    }
}
